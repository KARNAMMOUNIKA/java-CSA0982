public class PerfectNumber {
    public static void main(String[] args) {
        int givenNumber = 6;
        int sum = 0;
        
        for (int i = 1; i < givenNumber; i++) {
            if (givenNumber % i == 0) {
                sum += i;
            }
        }
        
        if (sum == givenNumber) {
            System.out.println("Its a Perfect Number");
        } else {
            System.out.println("Its not a Perfect Number");
        }
    }
}
